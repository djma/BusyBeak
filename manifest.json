{
  "manifest_version": 3,
  "name": "The Receipts",
  "version": "1.0",
  "description": "Remember what you see. Always bring receipts.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "host_permissions": ["https://api.openai.com/*", "https://*.pinecone.io/*"],
  "background": {
    "service_worker": "dist/background/index.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["dist/content/index.js"]
    }
  ]
}
