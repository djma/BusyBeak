datasource db {
  provider = "postgresql"
  url      = "postgresql://davidma@localhost:5432/ra"
}

generator client {
  provider = "prisma-client-js"
}

model TwitterUser {
  id           Int      @id @default(autoincrement())
  twitterId    String   @unique
  username     String
  displayName  String
  bio          String?
  profileImage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  tweets       Tweet[] // one-to-many relationship with Tweet
}

model Tweet {
  id        Int         @id @default(autoincrement())
  twitterId String      @unique
  content   String
  contentEmbedding String? // Points to pinecone @map("embeddingId")
  date      DateTime?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now()) @updatedAt
  authorId  Int
  author    TwitterUser @relation(fields: [authorId], references: [id])

  @@index([contentEmbedding])
  @@index([createdAt])
}

model Reflection {
  id        Int      @id @default(autoincrement())
  // type
  content   String
  contentEmbedding String? // Points to pinecone @map("embeddingId")
  prompt    String
  createdAt DateTime @default(now())

  @@index([contentEmbedding])
  @@index([createdAt])
}

model KvStore {
  key          String    @id
  value        String
  lastModified DateTime  @updatedAt
}
